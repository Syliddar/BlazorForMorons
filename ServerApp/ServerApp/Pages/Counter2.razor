@page "/counter2"
@page "/counter2/{startCount:int}"

<PageTitle>Counter 2</PageTitle>

<h1>Counter 2</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<ul>
    <li><a href="/counter2/42">Navigate to /counter/42</a></li>
    <li><a href="/counter2/123">Navigate to /counter/123</a></li>
    <li><a href="/counter2/">Navigate to /counter</a></li>
</ul>


@code {
    [Parameter]
    public int? StartCount { get; set; }
    private int? currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
    public async override Task SetParametersAsync(ParameterView parameters)
    {
        await base.SetParametersAsync(parameters);
        currentCount = StartCount ?? 1;
    }
}
